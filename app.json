{
  "expo": {
    "name": "Cortex_app",
    "slug": "Cortex_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/cortex_icon.png",
    "scheme": "cortexapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/cortex_icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to the microphone for voice chat functionality.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to convert your voice to text for AI conversations."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/cortex_icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/cortex_icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/cortex_icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-audio"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
